/* ==== Variáveis globais Translators101 - Enhanced for Better Readability ==== */
:root {
  --brand-purple: #8e44ad;
  --brand-purple-dark: #5e3370;
  --brand-purple-light: #a569bd;
  --accent-gold: #f39c12;
  --glass-bg: rgba(255, 255, 255, 0.08);
  --glass-border: rgba(255, 255, 255, 0.2);
  --text-light: #ffffff;
  --text-secondary: #f0f0f0;
  --text-muted: #d4d4d4;
  --text-readable: #2c3e50;
}

/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

body {
  font-family: "Inter", sans-serif;
  background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)),
    url("../img/pedra-roseta-bg.png?v=16")
    no-repeat center center fixed;
  background-size: cover;
  color: var(--text-light);
}

/* Enhanced Typography with Better Contrast */
.text-purple {
  color: var(--accent-gold); /* Changed from purple to gold for better readability */
  font-weight: 600;
}

.text-purple-alt {
  color: var(--brand-purple-light); /* Lighter purple for better contrast */
  font-weight: 600;
}

h1, h2, h3, h4, h5, h6 {
  color: var(--text-light);
  font-weight: 600;
}

h1 { font-size: 2.5rem; }
h2 { font-size: 2.2rem; }
h3 { font-size: 1.8rem; }
h4 { font-size: 1.5rem; }
h5 { font-size: 1.3rem; }
h6 { font-size: 1.1rem; }

p, span, div {
  color: var(--text-secondary);
  font-size: 1.1rem;
  line-height: 1.6;
}

/* Enhanced readability for key elements */
.highlight-text {
  color: var(--accent-gold);
  font-weight: 600;
  font-size: 1.2rem;
}

/* ==== VIDEOTECA SPECIFIC STYLES ==== */
/* Videoteca title with icon spacing */
.videoteca-title {
  display: flex;
  align-items: center;
  gap: 15px;
}

.videoteca-title i {
  color: var(--brand-purple);
}

/* Admin section */
.admin-section {
  margin-top: 20px;
}

.admin-actions {
  margin-top: 10px;
}

.admin-btn {
  font-size: 0.9rem !important;
  padding: 8px 16px !important;
}

/* Form labels */
.form-label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #ffffff;
}

/* Search button container */
.search-button-container {
  display: flex;
  align-items: end;
}

.search-btn {
  width: 100%;
}

/* Results info section */
.results-info {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 30px;
}

.results-text {
  color: #ffffff;
  margin: 0;
}

.smart-ordering-info {
  margin-top: 10px;
  padding: 10px;
  background: rgba(142, 68, 173, 0.1);
  border-radius: 8px;
  font-size: 0.9rem;
  color: #ffffff;
}

.smart-icon {
  color: var(--brand-purple);
}

/* Video meta display */
.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Featured and sequence sections */
.featured-section {
  margin-top: 10px;
}

.featured-tag {
  background: rgba(241, 196, 15, 0.25);
  color: #f1c40f;
}

.sequence-section {
  margin-top: 8px;
}

.sequence-tag {
  background: rgba(52, 152, 219, 0.25);
  color: #3498db;
  font-size: 0.8rem;
}

/* Empty state */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: 20px;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  color: var(--brand-purple);
}

.empty-title {
  font-size: 1.5rem;
  margin-bottom: 15px;
  color: #ffffff;
}

.empty-description {
  color: #cccccc;
  margin-bottom: 30px;
}

/* Statistics section */
.stats-section {
  margin-top: 40px;
  padding: 20px;
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: 12px;
}

.stats-title {
  color: #ffffff;
  margin-bottom: 15px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 2rem;
  margin-bottom: 8px;
  font-weight: 700;
}

.stat-value.purple {
  color: var(--brand-purple);
}

.stat-value.blue {
  color: #3498db;
}

.stat-value.gray {
  color: #95a5a6;
}

.stat-value.green {
  color: #2ecc71;
}

.stat-label {
  color: #cccccc;
  font-size: 0.9rem;
}

/* Container principal do grid */
.video-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 40px;
    max-width: 100%;
}

/* Card da palestra */
.video-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
}

.video-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    border-color: var(--brand-purple);
}

/* Container com proporção 16:9 */
.video-thumb-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio (9/16 = 0.5625) */
    overflow: hidden;
}

.video-thumb {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--brand-purple), #5e3370);
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Imagem do vídeo - mantém proporção sem corte */
.video-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Preenche o container mantendo proporção */
    display: block;
}

/* Placeholder para palestras sem imagem */
.video-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
}

.placeholder-icon {
    font-size: 3rem;
    margin-bottom: 10px;
    color: rgba(255, 255, 255, 0.7);
}

.placeholder-text {
    font-size: 0.9rem;
    opacity: 0.8;
}

/* Badges de nova/sequência */
.badge-new {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #e74c3c;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: bold;
    z-index: 10;
}

.badge-sequence {
    background: #3498db;
}

/* Overlay de hover com botão play */
.video-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: rgba(0, 0, 0, 0.5);
}

.video-thumb:hover .video-overlay {
    opacity: 1;
}

.play-button {
    background: var(--brand-purple);
    border-radius: 50%;
    padding: 15px;
    color: white;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 18px; /* Ajuste para centralizar o ícone play */
}

/* Informações da palestra */
.video-info {
    padding: 20px;
}

.video-info h3 {
    color: #fff;
    font-size: 1.1rem;
    margin-bottom: 8px;
    line-height: 1.3;
}

.video-speaker {
    color: var(--accent-gold);
    font-size: 1.1rem;
    margin: 8px 0;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}

.video-desc {
    color: #ccc;
    font-size: 0.85rem;
    line-height: 1.4;
    margin-bottom: 15px;
}

.video-meta {
    font-size: 0.8rem;
    color: #999;
}

.tag {
    background: rgba(142, 68, 173, 0.25);
    color: var(--brand-purple);
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
}

/* Filtros */
.videoteca-filtros {
    margin-bottom: 30px;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    padding: 24px;
}

/* Responsividade */
@media (max-width: 1200px) {
    .video-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }
}

@media (max-width: 768px) {
    .filtros-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .video-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .video-info {
        padding: 15px;
    }
}

@media (max-width: 480px) {
    .video-grid {
        gap: 15px;
    }

    .video-info {
        padding: 12px;
    }

    .video-info h3 {
        font-size: 1rem;
    }
}

/* ==== IMPROVED SELECT AND FORM ELEMENTS CONTRAST ==== */
/* Global select styling with better contrast */
select, 
.filtros-grid select,
.vision-form select,
.form-group select,
.input-group select {
  background: rgba(255, 255, 255, 0.15) !important; /* Increased opacity for better contrast */
  color: #ffffff !important; /* Pure white text */
  border: 1px solid rgba(255, 255, 255, 0.3) !important;
  font-weight: 500 !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important; /* Text shadow for better readability */
}

/* Select dropdown options styling */
select option {
  background: #2c3e50 !important; /* Dark background for options */
  color: #ffffff !important; /* White text for options */
  padding: 8px 12px !important;
  font-weight: 500 !important;
}

/* Select hover and focus states */
select:hover {
  background: rgba(255, 255, 255, 0.2) !important;
  border-color: var(--brand-purple) !important;
}

select:focus {
  outline: none !important;
  background: rgba(255, 255, 255, 0.25) !important;
  border-color: var(--brand-purple) !important;
  box-shadow: 0 0 0 2px rgba(142, 68, 173, 0.3) !important;
}

/* Input elements with improved contrast */
input[type="text"],
input[type="email"], 
input[type="password"],
input[type="search"],
textarea,
.filtros-grid input,
.vision-form input,
.form-group input {
  background: rgba(255, 255, 255, 0.15) !important;
  color: #ffffff !important;
  border: 1px solid rgba(255, 255, 255, 0.3) !important;
  font-weight: 500 !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3) !important;
}

/* Input placeholder styling */
input::placeholder,
select::placeholder,
textarea::placeholder {
  color: rgba(255, 255, 255, 0.7) !important;
  font-weight: 400 !important;
}

/* Textarea specific styling */
textarea {
  background: rgba(255, 255, 255, 0.15) !important;
  color: #ffffff !important;
  border: 1px solid rgba(255, 255, 255, 0.3) !important;
  font-weight: 500 !important;
}

/* Search filters specific improvements */
.search-filters select,
.filtros-container select {
  background: rgba(255, 255, 255, 0.18) !important;
  color: #ffffff !important;
  font-size: 1rem !important;
  font-weight: 600 !important;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6) !important;
}

/* Disabled form elements */
select:disabled,
input:disabled,
textarea:disabled {
  background: rgba(255, 255, 255, 0.05) !important;
  color: rgba(255, 255, 255, 0.5) !important;
  opacity: 0.6 !important;
  cursor: not-allowed !important;
}

/* ==== Glass Components ==== */
.glass-header,
.glass-footer,
.card,
.project-card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
}

/* ==== Header ==== */
.glass-header {
  position: fixed;
  top: 0; left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 40px;
  height: 80px;
  z-index: 1000;
}

.glass-header img {
  height: 40px;
}

.glass-header nav ul {
  display: flex;
  list-style: none;
  gap: 24px;
}

.glass-header nav a {
  text-decoration: none;
  color: var(--text-light);
  font-weight: 500;
  padding: 6px 12px;
  border-radius: 8px;
}

.glass-header nav a:hover {
  background: var(--brand-purple);
  color: #fff;
}

.glass-header.scrolled {
  background: rgba(20,20,20,0.5);
  backdrop-filter: blur(30px);
  height: 65px;
  box-shadow: 0 6px 24px rgba(0,0,0,0.35);
}

/* ==== Footer ==== */
.glass-footer {
  margin-top: 40px;
  padding: 20px;
  text-align: center;
}

.glass-footer .footer-links {
  margin: 15px 0;
}

.glass-footer .footer-links a {
  margin: 0 10px;
  color: var(--text-light);
  text-decoration: none;
}

.glass-footer .footer-links a:hover {
  color: var(--brand-purple);
}

.footer-copy {
  font-size: 14px;
  color: #ccc;
}

/* ==== Carrossel ==== */
.carousel {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  padding: 20px 0;
  scroll-snap-type: x mandatory;
}
.carousel::-webkit-scrollbar { display: none; }
.card {
  width: 250px;
  padding: 16px;
  text-align: center;
  flex-shrink: 0;
  scroll-snap-align: start;
}
.card img {
  width: 100%;
  border-radius: 12px;
  margin-bottom: 10px;
}
.card:hover {
  transform: translateY(-10px) scale(1.05);
  box-shadow: 0 8px 35px rgba(142,68,173,0.6);
}

/* ==== Grid de Projetos ==== */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
}
.project-card {
  padding: 20px;
  text-align: center;
  font-weight: bold;
}
.project-card:hover {
  background: rgba(142,68,173,0.3);
  transform: scale(1.05);
}

/* ==== Fade In Lazy ==== */
.fade-item {
  opacity: 0;
  transform: translateY(30px) scale(0.95);
}
.fade-item.visible {
  opacity: 1;
  transform: translateY(0) scale(1);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

/* ==== Hero Section ==== */
.glass-hero {
  background: rgba(142, 68, 173, 0.3);
  backdrop-filter: blur(25px);
  padding: 80px 40px;
  border-radius: 20px;
  text-align: center;
  margin-bottom: 40px;
  animation: fadeInHero 1.2s ease forwards;
  transform: translateY(20px);
  opacity: 0;
}

.glass-hero h1 {
  font-size: 2.8rem;
  margin-bottom: 20px;
  color: #fff;
}

.glass-hero p {
  font-size: 1.2rem;
  max-width: 700px;
  margin: 0 auto 30px;
  color: #e0e0e0;
}

/* Botão CTA */
.cta-btn {
  display: inline-block;
  padding: 14px 28px;
  font-size: 1.1rem;
  font-weight: bold;
  border-radius: 30px;
  background: var(--brand-purple);
  color: #fff;
  text-decoration: none;
  box-shadow: 0 6px 18px rgba(142, 68, 173, 0.6);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: none;
  cursor: pointer;
}

.cta-btn:hover {
  transform: scale(1.07);
  box-shadow: 0 8px 25px rgba(142, 68, 173, 0.8);
}

/* Hero Animation */
@keyframes fadeInHero {
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* ==== Sidebar Vision Style ==== */
.glass-sidebar {
  position: fixed;
  top: 80px; /* abaixo do header fixo */
  left: 0;
  width: 220px;
  height: calc(100vh - 80px);
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border-right: 1px solid var(--glass-border);
  padding: 20px 0;
  display: flex;
  flex-direction: column;
  z-index: 900;
  transition: width 0.3s ease, transform 0.3s ease;
  overflow-x: hidden;
}

/* Estado colapsado (desktop) */
.glass-sidebar.collapsed {
  width: 70px;
}
.glass-sidebar.collapsed .sidebar-nav span {
  display: none;
}
.glass-sidebar.collapsed .sidebar-nav a {
  justify-content: center;
}

/* Sidebar Nav */
.sidebar-nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 0;
}
.sidebar-nav a {
  color: var(--text-light) !important;
  text-decoration: none;
  font-weight: 500;
  padding: 10px 14px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 12px;
  white-space: nowrap;
  font-size: 0.95rem;
}
.sidebar-nav a i {
  width: 20px;
  text-align: center;
  font-size: 1rem;
}
.sidebar-nav a:hover {
  background: var(--brand-purple);
  color: #fff !important;
  transform: translateX(5px);
}

/* ==== Conteúdo deslocado conforme sidebar ==== */
body.with-sidebar main.content {
  margin-left: 220px;
  transition: margin-left 0.3s ease;
}
body.with-sidebar.sidebar-collapsed main.content {
  margin-left: 70px;
}

/* ==== Layout Principal ==== */
.main-content {
  margin-left: 220px;
  margin-top: 80px;
  padding: 40px;
  min-height: calc(100vh - 80px);
  transition: margin-left 0.3s ease;
}

body.sidebar-collapsed .main-content {
  margin-left: 70px;
}

/* ==== Responsivo (mobile) ==== */
@media(max-width: 900px) {
  body.with-sidebar main.content,
  .main-content {
    margin-left: 0;
  }
  .glass-sidebar {
    transform: translateX(-100%);
  }
  .glass-sidebar.active {
    transform: translateX(0);
  }
  .glass-header {
    padding: 16px 20px;
  }
  .glass-header .desktop-nav {
    display: none;
  }
  .mobile-menu-toggle {
    display: block;
    cursor: pointer;
    font-size: 1.2rem;
  }
}

/* Desktop - esconder botão mobile */
@media(min-width: 901px) {
  .mobile-menu-toggle {
    display: none;
  }
}

/* ==== Videoteca Vision ==== */
.videoteca-filtros,
.videoteca-paginacao {
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 30px;
  backdrop-filter: blur(20px);
}

/* Grid de vídeos */
.video-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 24px;
}

/* Card Vision para cada palestra */
.video-card {
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  overflow: hidden;
  backdrop-filter: blur(20px);
  box-shadow: 0 4px 25px rgba(0,0,0,0.25);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
}

.video-card:hover {
  transform: translateY(-6px) scale(1.02);
  box-shadow: 0 8px 30px rgba(142,68,173,0.6);
}

/* Thumbnail */
.video-thumb {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-bottom: 1px solid var(--glass-border);
}

/* Informações */
.video-info {
  padding: 16px;
}

.video-info h3 {
  font-size: 1.1rem;
  margin-bottom: 8px;
  color: #fff;
}

.video-speaker {
  color: var(--accent-gold);
  font-size: 1.1rem;
  margin: 8px 0;
  font-weight: 600;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}

.video-desc {
  font-size: 0.9rem;
  color: #ddd;
  margin-bottom: 12px;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15px;
  font-size: 0.95rem;
  font-weight: 500;
  color: #bbb;
}
.video-meta i {
  margin-right: 6px;
  color: var(--accent-gold);
}

.video-category {
    background: var(--brand-purple);
    color: var(--text-primary);
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.video-duration {
    color: var(--accent-gold);
    font-weight: 500;
}

/* Filtros */
.filtros-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr auto;
  gap: 16px;
}

.filtros-grid input,
.filtros-grid select {
  padding: 12px;
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.18);
  color: #ffffff;
  font-size: 1rem;
  font-weight: 600;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6);
}

.filtros-grid input::placeholder {
  color: #aaa;
}

.filtros-grid input:focus,
.filtros-grid select:focus {
  outline: none;
  border-color: var(--brand-purple);
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 0 0 2px rgba(142, 68, 173, 0.3);
}

/* Badges */
.badge-new {
  position: absolute;
  top: 12px;
  left: 12px;
  background: #2ecc71;
  color: #fff;
  font-size: 0.75rem;
  padding: 4px 10px;
  border-radius: 12px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4px;
  animation: pulse 2s infinite;
}

