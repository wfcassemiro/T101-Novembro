.certificate-item:hover {
    transform: translateY(-2px);
    border-color: var(--brand-purple);
}

.certificate-info {
    flex: 1;
}

.certificate-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
}

.certificate-header h4 {
    margin: 0;
    color: var(--text-light);
    font-size: 1.0rem;
    font-weight: 600;
    max-width: 60%;
}

.certificate-date {
    color: var(--text-muted);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 4px;
}

.certificate-details {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.detail {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    font-size: 0.85rem;
}

.detail i {
    color: var(--brand-purple);
    width: 14px;
}

.certificate-id {
    font-family: 'SF Mono', Monaco, monospace;
    font-size: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
    padding: 2px 5px;
    border-radius: 3px;
}

.certificate-actions {
    display: flex;
    gap: 8px;
    flex-shrink: 0;
}

.btn-small {
    padding: 6px 12px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 4px;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-light);
}

.btn-small:hover {
    background: rgba(142, 68, 173, 0.8);
    border-color: var(--brand-purple);
    transform: translateY(-1px);
    color: white;
}

.btn-verify {
    background: rgba(46, 204, 113, 0.1);
    border-color: rgba(46, 204, 113, 0.3);
    color: #2ecc71;
}

.btn-verify:hover {
    background: rgba(46, 204, 113, 0.8);
    border-color: #2ecc71;
    color: white;
}

.no-certificates {
    text-align: center;
    padding: 40px 20px;
}

.no-certificates-icon {
    font-size: 3rem;
    color: var(--text-muted);
    margin-bottom: 15px;
}

.no-certificates h3 {
    margin-bottom: 10px;
    color: var(--text-light);
}

.no-certificates p {
    margin-bottom: 25px;
    color: var(--text-muted);
    line-height: 1.6;
}

/* Enhanced Status Badges */
.status-badge {
    padding: 4px 10px;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-completed {
    background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
    color: white;
}

.status-pending {
    background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
    color: white;
}

.status-premium {
    background: linear-gradient(135deg, var(--accent-gold) 0%, #f1c40f 100%);
    color: #2c3e50;
    font-weight: 700;
}

.status-admin {
    background: linear-gradient(135deg, var(--brand-purple) 0%, var(--brand-purple-light) 100%);
    color: white;
}

.status-subscriber {
    background: linear-gradient(135deg, #3498db 0%, #5dade2 100%);
    color: white;
}

/* ==== VIDEOTECA IMPROVEMENTS ==== */

/* Improved Filters Grid */
.filtros-grid-improved {
    display: grid;
    grid-template-columns: 2fr 300px 250px auto;
    gap: 20px;
    align-items: end;
}

.search-field-expanded {
    display: flex;
    flex-direction: column;
}

.search-input-large {
    padding: 12px 16px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.18);
    color: #ffffff;
    font-size: 1rem;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6);
    width: 100%;
}

.category-field,
.sort-field {
    display: flex;
    flex-direction: column;
}

.category-select,
.sort-select {
    padding: 12px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.18);
    color: #ffffff;
    font-size: 1rem;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6);
}

.search-btn-container {
    display: flex;
    align-items: end;
}

.search-btn {
    white-space: nowrap;
    padding: 12px 20px;
    height: fit-content;
}

/* Video Grid - 4 Columns */
.video-grid-four {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    margin-bottom: 40px;
    max-width: 100%;
}

/* Video Cards with 16:9 aspect ratio */
.video-grid-four .video-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
}

.video-grid-four .video-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    border-color: var(--brand-purple);
}

/* Perfect 16:9 aspect ratio container */
.video-grid-four .video-thumb-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio (9/16 = 0.5625) */
    overflow: hidden;
    background: linear-gradient(135deg, var(--brand-purple), #5e3370);
}

.video-grid-four .video-thumb {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Image scaling to fill container without distortion */
.video-grid-four .video-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Fills container maintaining aspect ratio */
    object-position: center; /* Centers the image */
    display: block;
}

/* Video Info section */
.video-grid-four .video-info {
    padding: 16px;
}

.video-grid-four .video-info h3 {
    font-size: 1.0rem;
    margin-bottom: 8px;
    color: #fff;
    line-height: 1.3;
}

.video-grid-four .video-speaker {
    color: var(--accent-gold);
    font-size: 0.95rem;
    margin: 6px 0;
    font-weight: 600;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}

.video-grid-four .video-desc {
    color: #ccc;
    font-size: 0.8rem;
    line-height: 1.4;
    margin-bottom: 12px;
}

.video-grid-four .video-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: #999;
}

.video-grid-four .video-category {
    background: var(--brand-purple);
    color: white;
    padding: 3px 6px;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.video-grid-four .video-duration {
    color: var(--accent-gold);
    font-weight: 500;
    font-size: 0.8rem;
}

/* Responsive adjustments */
@media (max-width: 1400px) {
    .video-grid-four {
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }
}

@media (max-width: 1200px) {
    .profile-row-three {
        grid-template-columns: 1fr;
    }
    
    .filtros-grid-improved {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .video-grid-four {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
}

@media (max-width: 900px) {
    .profile-row {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .profile-form-content {
        flex-direction: column;
        align-items: stretch;
        gap: 20px;
    }
    
    .form-actions-right {
        align-self: flex-end;
    }
}

@media (max-width: 768px) {
    .video-grid-four {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .profile-card {
        padding: 20px;
    }
    
    .compact-stats-grid {
        grid-template-columns: 1fr;
    }
    
    .certificate-item {
        flex-direction: column;
        gap: 15px;
        align-items: stretch;
    }
    
    .certificate-header {
        flex-direction: column;
        gap: 8px;
    }
    
    .certificate-header h4 {
        max-width: 100%;
    }
    
    .certificate-details {
        flex-direction: column;
        gap: 8px;
    }
    
    .certificate-actions {
        justify-content: center;
        flex-wrap: wrap;
    }
}

